<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
		<mapping resource="Inheritance/Payment.hbm.xml"></mapping>
		<!-- <mapping resource="NamedQueries/UserPOJO.hbm.xml"></mapping> -->

		<!-- <mapping resource="Cache/CachePOJO.hbm.xml"></mapping> -->

		<!-- <mapping resource="Association_One_to_One/Employee.hbm.xml"></mapping> 
			<mapping resource="Association_One_to_One/Address.hbm.xml"></mapping> -->

		<mapping resource="TableParSubClass/PaymentSubclass.hbm.xml"></mapping>
		<mapping resource="TableParSubClass/CashSubClass.hbm.xml"></mapping>
		<mapping resource="TableParSubClass/ChequeSubClass.hbm.xml"></mapping>
		<mapping resource="TableParSubClass/CreditSubClass.hbm.xml"></mapping>

		<!-- <<mapping resource="Association/ActionItem.hbm.xml"></mapping> resource="Association/Bid.hbm.xml"></mapping> 
			<mapping resource="Criteria/CriteriaPojo.hbm.xml" /> <mapping resource="Association_One_to_One/Address.hbm.xml"></mapping> 
			<mapping resource="Association_One_to_One/Employee.hbm.xml"></mapping> -->
	</session-factory>
</hibernate-configuration>
